<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jtp.c.dendai.ac.jp.switch_test.StageSelect">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/array_left"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="203dp"
        android:layout_y="8dp"
        android:fontFamily="casual"
        android:text="STAGE  SELECT"
        android:textSize="24sp"
        android:textColor="#000"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="5dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_x="48dp"
        android:layout_y="129dp"
        android:text="1"
        android:textSize="50sp"
        android:layout_alignBottom="@+id/button2"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_x="231dp"
        android:layout_y="129dp"
        android:text="2"
        android:textSize="50sp"
        android:layout_alignTop="@+id/button3"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_x="421dp"
        android:layout_y="129dp"
        android:text="3"
        android:textSize="50sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp" />

</RelativeLayout>
